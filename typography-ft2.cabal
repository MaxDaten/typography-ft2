name:                typography-ft2
version:             0.4.0.0
synopsis:            very simple freetype2 high level wrappings            
-- description:         
license:             MIT
license-file:        LICENSE
author:              Jan-Philip Loos
maintainer:          maxdaten@gmail.com
-- copyright:           
category:            Graphics
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10


Flag library-only
    Description:   Build only the yage-lib
    Default:       False

library
  exposed-modules:        Graphics.Font.FontLibrary
                          Graphics.Font.FontFace
                          Graphics.Font.FontGlyph
                          Graphics.Font
                          Graphics.Font.BitmapLoader
  -- other-modules:       
  -- other-extensions:
  ghc-options:  -Wall -threaded

  build-depends:            base              <      5
                          , containers        >=     0.5
                          , freetype2         >=     0.1
                          , directory         >=     1.2
                          , missing-foreign   >=     0.1.1
                          , JuicyPixels       >=     3.2
                          , safe

  -- hs-source-dirs:      
  default-language:       Haskell2010

