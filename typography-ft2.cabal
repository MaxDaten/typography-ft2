executable LibTest
    if flag(library-only)
      Buildable: False

    hs-source-dirs:       examples
    main-is:              LibTest.hs
    ghc-options:          -Wall -threaded

    build-depends:          base
                          , freetype2
                          , containers
                          , filepath
                          , typography-ft2
                          , JuicyPixels
                          , directory
    default-language:     Haskell2010


executable CharRenderer
    if flag(library-only)
      Buildable: False

    hs-source-dirs:       examples
    main-is:              CharRenderer.hs
    ghc-options:          -Wall -threaded

    build-depends:          base
                          , typography-ft2
